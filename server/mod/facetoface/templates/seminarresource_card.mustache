{{!

    @template mod_facetoface/seminarresource_card

    This template generates the informational card for a seminar resource.

    Context variables required for this template:
    * heading: heading text
    * subtitle: sub heading text
    * simple: simple card or not
    * inactive: grayed out or not
    * detailsection: template data of seminarevent_detail_section, available only if simple is false
    * button: a link that looks like a button
    * button.url: the url of the button
    * button.hint: the aria-label of the button
    * button.accent: primary button or not
    * button.text: the label of the button
    * preview: additional html; do *not* abuse this!!

    Example content (json):
    {
        "heading": "Virtual meeting",
        "subtitle": "Please come back later",
        "simple": false,
        "inavtive": false,
        "detailsection": {
            "class" : "sessioninfo",
            "details" : [
                {
                    "label" : "Seminar",
                    "description" : "Test seminar 1"
                },
                {
                    "label" : "Session time",
                    "description" : "25 December 2020, 12:00 PM - 6:00 PM"
                }
            ]
        },
        "button": {
            "text": "Join now",
            "url": "https://zoom.us/j/93383039810"
            "accent": false
            "hint": "Go to Zoom Meeting Room"
        }
        "preview": "<p>more data</p>",
        "multibutton": false
    }
}}

<div class="mod_facetoface__eventinfo__sidebars">
    <div class="mod_facetoface__eventinfo__sidebar__panel mod_facetoface__resource-card{{#simple}} mod_facetoface__resource-card--simple{{/simple}}{{#inactive}} mod_facetoface__resource-card--inactive{{/inactive}}">
        {{#heading}}<h3>{{.}}</h3>{{/heading}}
        {{#subtitle}}<h4>{{.}}</h4>{{/subtitle}}
        {{^simple}}{{#detailsection}}{{> mod_facetoface/seminarevent_detail_section }}{{/detailsection}}{{/simple}}
        {{#multibutton}}
            <div class="mod_facetoface__resource-card__button">
                {{#hostbutton}}<a role="button" href="{{url}}" class="btn {{#accent}}btn-primary{{/accent}}{{^accent}}btn-default{{/accent}}" target="_blank" rel="noopener noreferrer"{{#hint}} aria-label="{{.}}"{{/hint}}>{{text}}</a>{{/hostbutton}}
                {{#joinbutton}}<a role="button" href="{{url}}" class="btn {{#accent}}btn-primary{{/accent}}{{^accent}}btn-default{{/accent}}" target="_blank" rel="noopener noreferrer"{{#hint}} aria-label="{{.}}"{{/hint}}>{{text}}</a>{{/joinbutton}}
            </div>
        {{/multibutton}}
        {{^multibutton}}
            {{#button}}<div class="mod_facetoface__resource-card__button"><a role="button" href="{{url}}" class="btn {{#accent}}btn-primary{{/accent}}{{^accent}}btn-default{{/accent}}" target="_blank" rel="noopener noreferrer"{{#hint}} aria-label="{{.}}"{{/hint}}>{{text}}</a></div>{{/button}}
        {{/multibutton}}
        {{#preview}}<div class="mod_facetoface__resource-card__preview">{{{.}}}</div>{{/preview}}
    </div>
</div>
