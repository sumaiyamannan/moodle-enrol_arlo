{{#headeraction}}{{> mod_facetoface/seminarevent_actionbar }}{{/headeraction}}

<h2>{{heading}}</h2>

<section class="mod_facetoface__eventinfo">
    {{#card}}{{> mod_facetoface/seminarresource_card }}{{/card}}
    {{#details}}<div class="mod_facetoface__eventinfo__content">{{{.}}}</div>{{/details}}
</section>

{{#report}}
    <section class="mod_facetoface__eventinfo__content__eventdetail__section">
        <h3>{{header}}</h3>
        {{#debughtml}}<div>{{{.}}}</div>{{/debughtml}}
        {{{description}}}
        {{{searchoptions}}}
        {{{search}}}
        {{{sidebar}}}
        {{{reporthtml}}}
    </section>
{{/report}}

{{#footeraction}}{{> mod_facetoface/seminarevent_actionbar }}{{/footeraction}}
